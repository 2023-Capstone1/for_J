<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/list_item_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text=""/>

        <!--리스트 반복 횟수 텍스트뷰-->
        <!--일정 추가할 때 반복 횟수 설정한 리스트만 이 텍스트뷰 보이게 설정해야함-->
        <!--카테고리 리스트의 경우 아래 텍스트뷰 안보이게 해야됨-->
        <TextView
            android:id="@+id/listRepetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listName"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textColor="@color/blueGray_900"
            android:textSize="20dp" />

        <!--자바로 -> 카테고리 db 테이블에서 모든 카테고리 일단 다 가져오기
                  -> -->
        <ImageView
            android:id="@+id/listCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_check_box_empty"
            android:layout_marginRight="20dp"
            android:clickable="true"/>
    </RelativeLayout>

</LinearLayout>